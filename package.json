{
  "name": "sachi.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "velite && next dev",
    "dev:velite": "velite dev",
    "build": "velite && next build",
    "start": "next start",
    "lint": "next lint",
    "docker:dev": "docker compose up dev",
    "docker:prod": "docker compose up prod --build",
    "deploy": "gcloud run deploy sachi-dev --source . --region=asia-southeast1 --allow-unauthenticated --set-env-vars=$(grep -v '^#' .env.local | grep -v '^$' | tr '\\n' ',' | sed 's/,$//')",
    "domain:map": "gcloud beta run domain-mappings create --service=sachi-dev --domain=sachi.dev --region=asia-southeast1 && gcloud beta run domain-mappings create --service=sachi-dev --domain=www.sachi.dev --region=asia-southeast1",
    "domain:status": "gcloud beta run domain-mappings describe --domain=sachi.dev --region=asia-southeast1",
    "domain:list": "gcloud beta run domain-mappings list --region=asia-southeast1"
  },
  "dependencies": {
    "@google/genai": "^1.39.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.1",
    "@vercel/og": "^0.8.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.503.0",
    "motion": "^12.23.25",
    "next": "16.0.7",
    "next-themes": "^0.4.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^20.19.25",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-pretty-code": "^0.13.2",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "unist-builder": "3.0.0",
    "unist-util-visit": "^4.1.2",
    "velite": "^0.3.0"
  }
}
